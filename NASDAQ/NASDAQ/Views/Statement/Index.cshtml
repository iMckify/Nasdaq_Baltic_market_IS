@model NASDAQ.ViewModels.StatementViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Statement</h2>
<p><b>Prepared:</b> @DateTime.Now</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Statements from: </label>
        @Html.EditorFor(model => model.from, new { htmlAttributes = new { @class = "form-control date-picker" } })
        <label>Statements to: </label>
        @Html.EditorFor(model => model.to, new { htmlAttributes = new { @class = "form-control date-picker" } })
        <br />
        <input class="btn btn-success" type="submit" value="Select">
    </div>
}

    <table class="table table-striped">
        <tr style="background-color:lightblue">
            <th>
                @Html.DisplayNameFor(model => model.prices[0].company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prices[0].fk_Security)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prices[0].count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prices[0].sum)
            </th>
        </tr>

        @if (Model.prices.Count == 0)
        {
            <tr>
                <td colspan="4" align="center"><b style="color:red;">Nurodytame laikotarpyje nebuvo kainų</b></td>
            </tr>
        }

        @for (int i = 0; i < Model.prices.Count; i++)
        {
            <tr>
                <td>@Model.prices[i].company</td>
                <td>@Model.prices[i].fk_Security</td>
                <td>@Model.prices[i].count</td>
                <td>@Model.prices[i].sum</td>
            </tr>
        }

            <tr style="background-color: lightblue">
                <td height="10px;" colspan="2" align="right"><b>Total</b></td>
                <td height="10px;" colspan="1"><b>count</b></td>
                <td height="10px;" colspan="1"><b>profit</b></td>
            </tr>

        <tr>
            <td colspan="2"></td>
            <td>
                @Html.DisplayFor(modelItem => Model.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.sum)
            </td>
        </tr>

